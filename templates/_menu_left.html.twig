<div id="mySidepanel " class="sidepanel bg-light">
  {# Bouton burger #}
  <button  id="btn-nav" class="btn btn-outline-secondary" ><i class="fas fa-times"></i></button>
  {# Logo #}
  <a href="{{path ("home")}}"><div class="photo-profil"><img src="{{ chemin ?? '' }}./image/logo_small.png" alt="logo FeedyTech"></div></a>
  {# Dropdown menu #}
  <button class="dropdown-btn">Mes flux
    <i class="fa fa-caret-down"></i>
  </button>
  {# Liens de flux suivis l'utilisateur #}
  <div class="dropdown-container">
    {% if follow is defined %}
      {% for site in follow %}
        <div class="d-flex justify-centent-between align-items-center">
          <a href="{{ path("espace_follow",{ id: site.id })}}" class="rounded style_hover">{{site.site.name}}</a> 
          {# Bouton delete #}
          <form method="post" action="{{ path('follow_delete', {'id': site.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce lien ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
            <button class="btn text-danger"><i class="fas fa-times"></i></button>
          </form>
        </div>
      {% endfor %}
    {% endif %}
  </div>
  <a href=" {{path("app_logout")}} " class="rounded style_hover">Deconnexion</a>
</div>
