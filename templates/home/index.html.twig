{% endblock %}

{% block body %}
	<div class="container pageHome ">


		<main class="mainhome">


			<div class="container-fluid" id="titre">

				<h1 class="presentation">"Toutes les dernières infos de la tech en temps réel"</h1>


			</div>
		
			<div id="but" class="w3-row" id"but">

				<ul class="skiplinks">
					<li><a class="btn " data-toggle="collapse"href="{{ path("app_register")}}" role="button" aria-expanded="false" aria-controls="collapseExample" id="styled">Inscription</a></li>
					<li><a class="btn " type="button" data-toggle="collapse"data-target="{{ path("app_login")}}" aria-expanded="false" aria-controls="collapseExample" id="styled">Connexion</a></li>
