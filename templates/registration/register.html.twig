<!DOCTYPE>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}inscription
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		{% block stylesheet %} {{ encore_entry_link_tags('register') }}
		{% endblock %}

		{% block javascripts %} {{ encore_entry_script_tags('register') }}
		{% endblock %}


		{% block body %}
					<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscription</p>

                <div class="mx-1 mx-md-4">
{{ form_start(registrationForm) }}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
					{{ form_errors( registrationForm.username, )}} {{ form_widget(registrationForm.username, {
                    attr: { placeholder: "Pseudo" }
                } )}}
                      
                      
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                 
					  {{ form_errors( registrationForm.email, )}} {{ form_widget(registrationForm.email, {
                    attr: { placeholder: "Email" }
   } )}}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_errors(registrationForm.plainPassword, {
        }) }} {{ form_widget(registrationForm.plainPassword, {
                    attr: { placeholder: "Mot de Passe" }
                } )}}
                    </div>
                  </div>


                  
                  <div>
                  <i class="fas fa-home"></i>
                  <a href="{{path("home")}}" class="text-decoration-none text-dark home">Retour a l'accueil</a>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 p-2">
                    <button type="submit" class="btn btn-primary btn-lg">Confirmer</button>
                  </div><div class="form-check d-flex justify-content-center mb-5">
                   
                    {{ form_row(registrationForm.agreeTerms) }}
                  </div>{{ form_end(registrationForm) }}
                  </div>

                

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

					
{% endblock %}
{% include "_footer.html.twig" %}
</body></html>
