{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheet %} {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block javascripts %} {{ encore_entry_script_tags('register') }}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3 font-weight-bolder  font-size: 14px">
				Bonjour {{ app.user.username }},
			</div>
		{% endif %}

		<div class="container">
			<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">


				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-lg-12 col-xl-11">
						<div class="card text-black" style="border-radius: 25px;">
							<div class="card-body md-5">
								<div class="row justify-content-center">
									<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
										<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Connexion</p>
										<div class="mx-1 mx-md-4">
											<div
												class="d-flex flex-row align-items-center mb-4">
												<!-- Email input -->
												<div class="form-outline mb-4">
													<input type="email" id="inputEmail" value="{{ last_username }}" name="email" class="form-control form-control-lg" placeholder="Adresse mail" autocomplete="email" required autofocus/>
												</div>
											</div>
											<div class="form-outline flex-fill mb-0">
												<div class="d-flex flex-row align-items-center mb-4">
													<div class="form-outline mb-3">
														<input type="password" id="inputPassword" name="password" class="form-control form-control-lg" placeholder="Mot de passe" autocomplete="current-password" required/>
													</div>
													<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
												</div>
											</div>
											<div class="form-check d-flex justify-content-center mb-5">
												<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 p-2">
													<button type="submit" class="btn btn btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Connexion</button>
												</div>
												<p class="small fw-bold">Pas encore inscrit?
													<a href="{{path ("app_register")}}" class="link-primary text-decoration-non">Inscription</a>
												</p>
											</div>
										</div>
									</div>
									<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

										<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</header>


		{% endblock %}
